<h2>
  Branches
  <%= link_to 'New Branch', new_branch_path, class: 'btn btn-sm btn-primary float-right' %>
</h2>

<table class="table table-bordered table-striped table-sm">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.region %></td>
        <td width="300px" class="text-center">
          <%= link_to 'Show', branch, class: 'btn btn-sm btn-primary' %>
          <%= link_to 'Edit', edit_branch_path(branch), class: 'btn btn-sm btn-secondary' %>
          <%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
