
<%= simple_form_for(@school, html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.association :branch %>
    <%= f.input :address %>
  </div>

  <div class="form-actions text-right">
    <%= f.button :submit, class: 'btn btn-primary mr-1' %>
    <%= link_to 'Back', schools_path, class: 'btn btn-secondary float-right' %>
  </div>
<% end %>
