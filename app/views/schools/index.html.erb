<h2>
  Schools
  <%= link_to 'New School', new_school_path, class: 'btn btn-sm btn-primary float-right' %>
</h2>

<table class="table table-bordered table-striped table-sm">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Branch</th>
      <th>Address</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.phone %></td>
        <td><%= school.branch.name %></td>
        <td><%= school.address %></td>
        <td width="300px" class="text-center">
          <%= link_to 'Show', school, class: 'btn btn-sm btn-primary' %>
          <%= link_to 'Edit', edit_school_path(school), class: 'btn btn-sm btn-secondary' %>
          <%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
